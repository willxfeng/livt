<div class="fixed">
  <nav class="top-bar" data-topbar role="navigation">
    <ul class="title-area">
      <li class="name">
        <h1><%= link_to "livt", root_path %></h1>
      </li>

      <li class="toggle-topbar menu-icon"><a href="/"><span>iSpy</span></a></li>
    </ul>

    <section class="top-bar-section">
      <ul class="">
        <li><%= link_to "Muscle Groups", muscle_groups_path %></li>
        <li><%= link_to "Exercises", exercises_path %></li>
        <li><%= link_to "My Workouts", workouts_path %></li>
      </ul>
    </section>

    <section class="top-bar-section">
      <ul class="right">
        <li class="has-form">
          <div class="search-bar">
           <%= form_tag("/search", method: 'get') do %>
             <span><%= text_field_tag :query, params[:query] %></span>
             <span><%= submit_tag "Search", :name => nil, class: "search-button" %></span>
           <% end %>
         </div>
       </li>
        <% if user_signed_in? %>
          <li class="has-dropdown">
           <a href="#">
             <% if current_user.avatar? %>
              <%= image_tag current_user.avatar_url, class: 'nav-img' %>
            <% else %>
              <%= image_tag 'default_photo.png', class: 'nav-img' %>
            <% end %>
            <%= current_user.full_name %>
          </a>
            <ul class="dropdown">
              <li><%= link_to "Edit Account", edit_user_registration_path %></li>
              <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign In!", new_user_session_path %></li>
          <li><%= link_to "Sign Up Here!", new_user_registration_path %></li>
        <%end%>
      </ul>
    </section>
  </nav>
</div>
